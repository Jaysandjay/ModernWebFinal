<%- include('partials/header', { title: 'Movie List' }) %>

<h1>Movie List</h1>
<div class="table-container">

    <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>


    <% if (typeof movielist !== 'undefined' &&
            movielist.length > 0
        ) { %>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Year</th>
                    <th>Genre</th>
                    <th>Rating</th>
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% movielist.forEach(movie => { %>
                    <tr>
                        <td><%= movie.name %></td>
                        <td><%= movie.year %></td>
                        <td><%= movie.genre %></td>
                        <td><%= movie.rating %></td>
                        <td><%= movie.description %></td>
                        <td>
                            <form
                                action="/update/<%= movie.id %>"
                                method="get"
                            >
                                <button type="submit" class="update-btn">Update</button>
                            </form>
                        </td>

                        <form
                            action="/delete/<%= movie.id %>"
                            method = "post"
                            onsubmit="
                                return confirm('Are you sure you want to delete this movie? ')
                            "
                        >
                            <td>
                                <button type="submit" class="delete-btn">Delete</button>
                            </td>
                        </form>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- to render error on UI -->
        <% if (typeof error !== 'undefined') { %>
            <p style="color: red"> <%= error %> </p>
        <% } %>

        <!-- to render messaged on UI -->
        <% if (typeof message !== 'undefined') { %>
            <p style="color: green"> <%= message %> </p>
        <% } %>

    <% } else { %>
        <div>
            <h2>No movie data received from the database</h2>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
