<%- include('partials/header', { title: 'Home' }) %>

<section class="hero">
  <h1>Welcome to MovieApp</h1>
  <p class="subtitle">
    A glowing place to add, edit, and explore your favourite movies.
  </p>

  <div class="hero-actions">
    <% if (user) { %>
      <a href="/movielist" class="btn btn-primary">Browse your movies</a>
      <a href="/insert" class="btn btn-ghost">Add a new movie</a>
    <% } else { %>
      <a href="/register" class="btn btn-primary">Create an account</a>
      <a href="/login" class="btn btn-ghost">Login</a>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
